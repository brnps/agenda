@model Agenda.Models.Contato

@{
    ViewBag.Title = "Deletar Contato";
}

<h2>Deletar Contato</h2>

<h3>Tem certeza que deseja deletar o contato selecionado?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome Contato
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome_Contato)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
            @Html.ActionLink("Voltar", "Index", "", htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>
